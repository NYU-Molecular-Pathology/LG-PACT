BootStrap: docker
From: ubuntu:16.04

%post

    apt-get update && apt-get install -y r-base-core
    Rscript -e "source('http://bioconductor.org/biocLite.R'); biocLite('PSCBS', 'cghFLasso')"

    apt-get install -y \
        liblzma-dev \
        python-biopython \
        python-dev \
        python-matplotlib \
        python-numpy \
        python-pip \
        python-reportlab \
        python-scipy \
        python-tk \
        zlib1g-dev

      pip install -U future futures pandas pyfaidx pysam
      pip install cnvkit==0.9.0
      cnvkit.py version

%test
    cnvkit.py version
