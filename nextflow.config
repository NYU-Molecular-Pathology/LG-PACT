        process.$bwa_mem.beforeScript = "${params.beforeScript_str} ; export NTHREADS=${params.docker_threads}"
        process.$sambamba_view_sort.beforeScript = "${params.beforeScript_str} ; export NTHREADS=${params.docker_threads}"
